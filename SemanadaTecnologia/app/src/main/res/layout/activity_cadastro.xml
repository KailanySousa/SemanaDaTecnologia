<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cadastro"
    android:paddingBottom="20dp">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19999999">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="@android:color/background_dark"
                app:cardCornerRadius="30dp"
                app:layout_constraintBottom_toTopOf="@+id/img_cadastro"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/senaijandira" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/txt_insta_senai_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="164dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="@string/insta_senai"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_senai_header"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginRight="256dp"
                android:layout_marginStart="8dp"
                android:text="@string/insta"
                android:textSize="14sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/txt_insta_senai_header" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_txt_nome"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:hint="Nome "
                android:padding="0dp"
                android:textColorHint="@color/colorDarkRed"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/colorDarkRed"
                app:boxStrokeWidth="5px"
                app:hintTextAppearance="@style/HintTextStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_cadastro">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_nome"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawablePadding="4dp"
                    android:elevation="10dp"
                    android:inputType="text"
                    android:padding="0dp"
                    android:textColor="@color/colorDarkRed">

                </android.support.design.widget.TextInputEditText>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_txt_intagram"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:hint="Perfil no Intagram"
                android:padding="0dp"
                android:textColorHint="@color/colorDarkRed"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/colorDarkRed"
                app:boxStrokeWidth="5px"
                app:hintTextAppearance="@style/HintTextStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_txt_nome">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_intagram"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawablePadding="4dp"
                    android:elevation="10dp"
                    android:inputType="text"
                    android:padding="0dp"
                    android:textColor="@color/colorDarkRed">

                </android.support.design.widget.TextInputEditText>

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/img_cadastro"
                android:layout_width="347dp"
                android:layout_height="254dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_senai_header"
                app:srcCompat="@drawable/senaijandira"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_enviar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_enviar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>